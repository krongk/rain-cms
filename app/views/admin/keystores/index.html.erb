<h1>参数管理</h1>

<table class="table table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_keystores.each do |admin_keystore| %>
      <tr>
        <td><%= admin_keystore.key %></td>
        <td><%= admin_keystore.value %></td>
        <td><%= admin_keystore.description %></td>
        <td><%= link_to 'Show', admin_keystore %></td>
        <td><%= link_to 'Edit', edit_admin_keystore_path(admin_keystore) %></td>
        <td><%= link_to 'Destroy', admin_keystore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

