<%= simple_form_for(@admin_channel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label class="string optional control-label" for="admin_channel_typo">内容模型：</label>
    <%= f.select :typo, %W[article image product] %>
    <br>
    <%= f.input :properties, :collection => 
      [
        ['频道封面(栏目本身不允许发布文档)', 1],
        ['外部连接(在<默认路径>处填写网址)', 2]
      ], include_blank: false %>

    <label class="string optional control-label" for="admin_channel_properties">父级栏目：</label>
    <%= f.select :parent_id, Admin::Channel.all.map { |r| [r.title, r.id, { class: r.id }] }, include_blank: true %>

    <%= f.input :tmp_index, collection: @temp_list %>
    <%#= f.input :tmp_list, collection: @temp_list  %>
    <%= f.input :tmp_detail, collection: @temp_list %>
    <%= f.input :title %>  
    <%= f.input :short_title %>  
    <%= f.input :default_url %>
    <%= f.input :keywords %>
    <%= f.input :description %>
    <%#= f.input :content %>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'simple'}, height: "800px" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

