<div class="row">
  <div class="col-md-4">
    <h2><%= @admin_channel.title %></h2>
    <blockquote>
      <p>
        <%= link_to '修改', edit_admin_channel_path(@admin_channel), class: 'btn btn-primary btn-warning' %> | 
        <%= link_to '添加页面', new_admin_page_path(channel: @admin_channel.id), class: 'btn btn-primary btn-info' %> | 
        <%= link_to '返回', admin_channels_path, class: 'btn btn-default' %>
      </p>
      <small>对应网站前台的栏目</small>
    </blockquote>
    <hr>
    <p>
      <strong>Typo:</strong>
      <%= @admin_channel.typo %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @admin_channel.title %>
    </p>

    <p>
      <strong>Properties:</strong>
      <%= @admin_channel.properties %>
    </p>

    <p>
      <strong>Default url:</strong>
      <%= @admin_channel.default_url %>
    </p>

    <p>
      <strong>Tmp index:</strong>
      <%= @admin_channel.tmp_index %>
    </p>

    <p>
      <strong>Tmp list:</strong>
      <%= @admin_channel.tmp_list %>
    </p>

    <p>
      <strong>Tmp detial:</strong>
      <%= @admin_channel.tmp_detail %>
    </p>

    <p>
      <strong>Keywords:</strong>
      <%= @admin_channel.keywords %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @admin_channel.description %>
    </p>

  </div>
  <div class="col-md-8">
    <div class="panel panel-info">
      <div class="panel-heading">页面列表</div>
      <% if @pages.empty? %>
        <div class="panel-body">
          <p>该栏目没有任何页面，<a href="/admin/pages/new?channel=<%= @admin_channel.id%>" class="alert-link">点击这里添加！</a></p>
        </div>
      <% end %>

      <!-- List group -->
      <ul class="list-group">
        <% @pages.each do |page| %>
          <li class="list-group-item"><%= link_to page.title, edit_admin_page_path(page) %></li>
        <% end %>
      </ul>
    </div>
    <%= will_paginate @pages %>
  </div>
</div>


