<ul>
<% @admin_channels.each do |channel| %>
  <li><%= link_to channel.title, edit_admin_channel_path(channel) %>
    <ul>
    <% channel.children.each do |child| %>
      <li><%= link_to child.title, edit_admin_channel_path(child) %>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>

