<div class="row">
  <div class="col-md-2">
    <h2>栏目管理</h2>
    <blockquote>
      <p><%= link_to '添加栏目', new_admin_channel_path, class: 'btn btn-primary btn-small' %></p>
      <small>对应网站前台的栏目</small>
    </blockquote>
    <hr>
  </div>
  <div class="col-md-10">
    <ul>
    <% @admin_channels.each do |channel| %>
      <li><%= link_to channel.title, admin_channel_path(channel) %>
        <ul>
        <% channel.children.each do |child| %>
          <li><%= link_to child.title, admin_channel_path(child) %></li>
        <% end %>
        </ul>
      </li>
    <% end %>
    </ul>
  </div>
</div>
